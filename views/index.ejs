	<a name="loginsignin"></a>
	<section class="section section-signin text-center">
<br>
<br>
<br>
<br>
<br>

		<div class="panel panel-default col-sm-6">
			<div class="panel-body" role="tabpanel">

				<ul class="nav nav-pills">
					<li class="active"><a data-toggle="pill" href="#do-signin">Login</a></li>
					<li><a data-toggle="pill" href="#do-signup">Register</a></li>
				</ul>

				<!-- forms container -->
				<div class="tab-content">

					<!-- sign in -->
					<div role="tabpanel" class="tab-pane active" id="do-signin"
						ng-app="login" ng-controller="login">
						<h3 class="text-center">Sign in</h3>
						<p class="text-center">
							<br> Please use the form below to sign in to your account. <br>
						</p>
						<!-- <form method="post" action="/checklogin"> -->
						<div class="form">
							<div class="form-group">
								<label class="sr-only">Email <span class="text-danger">*</span></label>
								<input type="email" class="form-control" ng-model="email"
									name="email" placeholder="Email" required="required">
							</div>
							<div class="form-group">
								<label class="sr-only">Password <span
									class="text-danger">*</span></label> <input type="password"
									class="form-control" name="password" ng-model="password"
									placeholder="Password" required="required">
							</div>
							<!-- 		<div class="form-group ">
							<div class="pull-left signIn">
								<button type="submit" class="btn btn-primary">Sign in</button>
							</div>
						</div>  -->
							<div class="col-md-12" style="margin: 10px;">
								<div class="alert alert-danger" ng-hide="invalid_login">
									<strong>Incorrect username or password</strong>
								</div>
								<div class="alert alert-danger" ng-hide="unexpected_error">
									<strong>Unexpected error, try again</strong>
								</div>

								<input type="submit" class="btn btn-success" ng-click="submit();"
									value="Login" />
							</div>
						</div>
					</div>
					<!-- end of sign in -->

					<!-- sign up -->
					<div role="tabpanel" class="tab-pane" id="do-signup"
						ng-app="signupApp" ng-controller="signupCtrl">
						<h3 class="text-center">Registration</h3>
						<!-- <p class="text-center">
							<br> A very simple registration form. {{1+1}}<br>
						</p> -->
						<div class="col-md-12" style="margin: 10px;">
							<div class="alert alert-success" ng-hide="reg_success">
								<strong>Succesful, Please Login</strong>
							</div>
						</div>
						<form method="post" ng-hide="regForm">
							<div class="form-group">
								<label class="sr-only">First name <span
									class="text-danger">*</span></label> <input type="text"
									class="form-control" ng-model="firstname" name="firstname"
									placeholder="First name" required="required">
							</div>
							<div class="form-group">
								<label class="sr-only">Last name <span
									class="text-danger">*</span></label> <input type="text"
									class="form-control" ng-model="lastname" name="lastname"
									placeholder="Last name" required="required">
							</div>
							<div class="form-group">
								<label class="sr-only">User name <span
									class="text-danger">*</span></label> <input type="text"
									class="form-control" ng-model="username" name="username"
									placeholder="username" required="required">
							</div>
							<div class="form-group">
								<label class="sr-only">Email <span class="text-danger">*</span></label>
								<input type="email" ng-model="email" name="email"
									class="form-control" placeholder="Email" required="required">
							</div>
							<div class="form-group">
								<label class="sr-only">Password <span
									class="text-danger">*</span></label> <input type="password"
									class="form-control" ng-model="password" name="password"
									placeholder="Password" required="required">
							</div>
							<div class="col-md-12" style="margin: 10px;">
								<div class="alert alert-danger" ng-hide="username_email_exists">
									<strong>username/email exists</strong>
								</div>
								<div class="alert alert-danger" ng-hide="unexpected_error">
									<strong>Unexpected error, try again</strong>
								</div>
							</div>


							<div class="form-group">
								<!-- <button class="btn btn-block btn-action" type="submit" ng-click="submit();>Register</button>  -->
								<input type="submit" class="btn btn-success"
									ng-click="submit();" value="Register" />
							</div>

						</form>
					</div>
					<!-- end of sign in -->

				</div>
				<!-- end of forms container -->


